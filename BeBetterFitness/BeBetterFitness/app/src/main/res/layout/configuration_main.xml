<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <TextView android:id="@+id/title"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:text="Configuration Statistics"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorOffWhite"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView android:id="@+id/configStatsEditText"
        android:layout_width="match_parent"
        android:layout_height="190sp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@color/colorOffWhite"
        android:text="Lifts Created: 42 \n Workouts Created: 11" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="280sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="320sp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="OpenCreateALiftView">
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="46dp"
                        android:textSize="32dp"
                        android:text="Create A Lift"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="24dp"
                        android:textSize="13dp"
                        android:text="Create a lift of your own design."
                        android:textAlignment="center"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="46dp"/>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/add_a_lift_128"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="85sp"
                    android:background="@drawable/button"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="OpenCreateAWorkoutView">
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="46dp"
                        android:textSize="32dp"
                        android:text="Create A Workout"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="24dp"
                        android:textSize="13dp"
                        android:text="Associate lifts with a workout."
                        android:textAlignment="center"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="46dp"/>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/add_a_workout_128"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="155sp"
                    android:background="@drawable/button"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="OpenEditALiftView">
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="46dp"
                        android:textSize="32dp"
                        android:text="Edit A Lift"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="24dp"
                        android:textSize="13dp"
                        android:text="Edit a lift that already exists."
                        android:textAlignment="center"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="46dp"/>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/weightlifting_edit_128"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="225sp"
                    android:background="@drawable/button"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="OpenEditAWorkoutView">
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="46dp"
                        android:textSize="32dp"
                        android:text="Edit A Workout"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="24dp"
                        android:textSize="13dp"
                        android:text="Edit a workout that already exists."
                        android:textAlignment="center"
                        android:textColor="@color/colorOffWhite"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="46dp"/>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/workout_edit"/>
                </RelativeLayout>




            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>

    <!-- Side navigation drawer UI -->
<ListView
android:id="@+id/navList"
android:layout_width="200dp"
android:layout_height="match_parent"
android:layout_gravity="left|start"
android:background="#ffeeeeee"/>

    </android.support.v4.widget.DrawerLayout>