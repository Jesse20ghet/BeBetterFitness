<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical"
        android:background="@drawable/textview_bottomborderthin">
    <TextView
        android:id="@+id/performALiftLiftName"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textSize="25sp"
        android:text="Test Lift Name Test Test Test Test"
        android:textAlignment="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorOffWhite"
        android:maxLines="2"/>
    <TextView
        android:id="@+id/performALiftSetsReps"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="5 Sets | 10 Reps"
        android:textAlignment="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorOffWhite"
        android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/textview_bottomborderthin"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TextView
            android:id="@+id/performALiftLiftDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Test Description Test Description Test Description Test Description Test Description Test Description Test Description Test Description Test Description "
            android:textColor="@color/colorOffWhite"
            android:textAlignment="center"
            android:padding="15dp"
            android:background="@drawable/textview_bottomborderthin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <SeekBar
            android:id="@+id/performALiftFinishLiftSeekBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Slide to finish lift."
            android:textColor="@color/colorOffWhite"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>